Program(
  "!! R855 stop-stmt\n!    is  STOP [ stop-code ]\n!  \n!      stop-code  is  scalar-char-constant\n!                 or  digit [ digit [ digit [ digit [ digit ] ] ] ] \n!\n! Not tested here: scalar-char-constant\n\n"
, [ MainProgram(
      no-program-stmt()
    , initial-spec-part([], [])
    , SpecAndExecPart(
        [ TypeDeclarationStmt(
            no-label()
          , IntrinsicType(INTEGER(no-kind()))
          , comma-list([PARAMETER()])
          , [EntityDecl(
               "stop_code"
             , no-list()
             , no-list()
             , no-char-length()
             , Init(IntLiteralConstant("999", no-kind()))
             )]
          , eos("\n")
          )
        , TypeDeclarationStmt(
            no-label()
          , IntrinsicType(CHARACTER(no-char-selector()))
          , comma-list([PARAMETER()])
          , [EntityDecl("char_stop", no-list(), no-list(), no-char-length(), Init("\"stop please\""))]
          , eos("\n\n")
          )
        , StopStmt(no-label(), no-stop-code(), eos("\n"))
        , StopStmt("13", "'end of program'", eos("\n"))
        , StopStmt(no-label(), IntLiteralConstant("1", no-kind()), eos("\n"))
        , StopStmt(
            no-label()
          , DataRef([PartRef("stop_code", no-section-subscripts(), no-image-selector())])
          , eos("\n")
          )
        , StopStmt(no-label(), IntLiteralConstant("123", no-kind()), eos("\n"))
        , StopStmt(no-label(), IntLiteralConstant("1234", no-kind()), eos("\n"))
        , StopStmt(
            no-label()
          , DataRef([PartRef("char_stop", no-section-subscripts(), no-image-selector())])
          , eos("\n\n")
          )
        ]
      )
    , no-subprogram-part()
    , EndProgramStmt(no-label(), no-program-name(), eos("\n"))
    )
  ]
)
